@model Pattern
@using Endzone.Umbraco.PatternLib.Core.Models;
<!DOCTYPE html>
<html>
    <head>

        <title>Pattern Lib</title>
        <meta charset="UTF-8">

        <!-- never cache patterns -->
        <meta http-equiv="cache-control" content="max-age=0" />
        <meta http-equiv="cache-control" content="no-cache" />
        <meta http-equiv="expires" content="0" />
        <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
        <meta http-equiv="pragma" content="no-cache" />

        <!-- handle the viewport -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
        <!-- include styles here -->

    </head>
    <body>
        
        @if (Model.IsList)
        {
            foreach (var pattern in Model.Patterns)
            {
                <h2 style="margin: 0.75rem 1rem 1rem;">
                    <a href="@pattern.RazorViewerUrl" target="_parent">@pattern.Name</a>
                </h2>

                @Html.Action("PatternWithModel", "PatternLib", new { path = pattern.RelativePath })

                <div style="height: 3rem;"></div>
            }
        }
        else
        {
            @Html.Action("PatternWithModel", "PatternLib", new { path = Model.RelativePath })
        }
        
        <!-- include js here -->

    </body>
</html>
