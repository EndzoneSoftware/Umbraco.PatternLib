@inherits WebViewPage
<!DOCTYPE html>
<html>
    <head>

        <title>Pattern Lib</title>
        <meta charset="UTF-8">

        <!-- never cache patterns -->
        <meta http-equiv="cache-control" content="max-age=0" />
        <meta http-equiv="cache-control" content="no-cache" />
        <meta http-equiv="expires" content="0" />
        <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
        <meta http-equiv="pragma" content="no-cache" />

        <!-- handle the viewport -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- load the pattern lib css -->
        <link rel="stylesheet" href="~/App_Plugins/Umbraco.PatternLib/assets/css/styles.css" media="all" />

    </head>
    <body>
    
        @Html.Action("Header", "PatternLib", new { hideControls = ViewBag.HideControls })

        @RenderBody()
        
        <!-- load the js -->
        <script src="~/App_Plugins/Umbraco.PatternLib/assets/scripts/jquery.js"></script>
        <script src="~/App_Plugins/Umbraco.PatternLib/assets/scripts/scripts.js"></script>

    </body>
</html>
