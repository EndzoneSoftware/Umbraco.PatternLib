@model Umbraco.Web.PublishedContentModels.IAccordion
  
@Model.Name
  
@if (Model == null || !Model.Items.Any())
{
    return;
}

@foreach (var item in Model.Items.Select(x => new AccordionItem(x)))
{
    <div class="accordionButton">
        <h2>@item.Heading</h2>
    </div>
    <div class="accordionContent">
        @item.Text
    </div>    
}
