@using Endzone.Umbraco.PatternLib.Core.Models
@model PatternLibrary


<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand"><span id="PatternName"></span></a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                @{
                    foreach (var patternList in Model)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@patternList.Name <span class="caret"></span></a>
                            @ShowPatternMenu(patternList)
                        </li>
                    }
                }
            </ul>
            <p class="navbar-text navbar-right hidden" id="PatternInfo"><a id="PatternNewWindowLink" href="#" class="navbar-link" target="_blank"><span class="glyphicon glyphicon-new-window" aria-hidden="true"></span></a></p>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

@helper ShowPatternMenu(Pattern patternList) {

    <ul class="dropdown-menu">
        @foreach (var pattern in patternList.Patterns)
        {
            if (pattern.IsList)
            {
                <li class="menu-item dropdown dropdown-submenu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@pattern.Name</a>
                    @ShowPatternMenu(pattern)
                </li>
            }
            else
            {
                <li><a href="@pattern.LinkPath" data-action="ViewPortOpen" target="sg-viewport">@pattern.Name</a></li>
            }
        }
    </ul>

}